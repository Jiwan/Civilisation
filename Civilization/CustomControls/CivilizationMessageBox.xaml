<Window x:Class="Civilization.CustomControls.CivilizationMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choix du nom de la nouvelle civilisation" Height="100" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" VerticalAlignment="Center">Nom : </Label>
        <TextBox Grid.Column="1" Height="23" HorizontalAlignment="Left" Name="nameTextBox" Width="163" VerticalAlignment="Center" Margin="0,19" />
        <Button Grid.Column="2" Name="okButton" VerticalAlignment="Center" Width="30" Height="25" Click="okButton_Click">
            OK
        </Button>
    </Grid>
</Window>
